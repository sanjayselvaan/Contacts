<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundColor"
    android:fillViewport="true"
    tools:context=".AddContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/layout_border"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:contentDescription="@null"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/baseline_person_40"
                android:id="@+id/nameIcon"
                android:layout_alignTop="@id/nameTextInputLayout"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nameTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/nameIcon"
                android:hint="@string/name"
                android:padding="12dp"
                android:textColorHint="@color/textHintColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="text|textCapWords"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/layout_border"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:padding="16dp"
                android:src="@drawable/baseline_phone_50"
                android:layout_alignTop="@id/phoneNumberLinearLayout"/>

            <LinearLayout
                android:id="@+id/phoneNumberLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_toEndOf="@id/phoneIcon">

                <include
                    android:id="@+id/phoneView"
                    layout="@layout/extra_input_view" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/layout_border"
            android:padding="16dp">

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:padding="16dp"
                android:src="@drawable/baseline_email_50"
                android:layout_alignTop="@id/emailLinearLayout"/>

            <LinearLayout
                android:id="@+id/emailLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_toEndOf="@id/emailIcon">

                <include
                    android:id="@+id/emailView"
                    layout="@layout/extra_input_view" />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/layout_border"
            android:padding="16dp">

            <ImageView
                android:id="@+id/addressIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@null"
                android:padding="16dp"
                android:src="@drawable/baseline_location_on_50"
                android:layout_alignTop="@+id/addressLinearLayout"/>

            <LinearLayout
                android:id="@+id/addressLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_toEndOf="@id/addressIcon">

                <include
                    android:id="@+id/addressView"
                    layout="@layout/extra_input_view" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>




